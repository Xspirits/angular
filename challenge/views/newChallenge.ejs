<!doctype html>
<html>
<head>
	<% include statics/headers %>
	<title></title>
</head>
<body>

	<% include statics/navTop %>
	<div class="container">

		<div class="page-header text-center">
			<h1>Submit a new challenge</h1>
		</div>

		<div class="row">

			<% if (challenge.title) { %>
			<div class="alert alert-success">challenge Created successfully!</div>
			<dl class="dl-horizontal">
				<dt>Title</dt>
				<dd><%= challenge.title %></dd>
				<dt>Description</dt>
				<dd><%= challenge.description %></dd>
				<dt>Duration</dt>
				<dd><%= challenge.durationD %> day(s) and <%= challenge.durationH %> hours max</dd>
			</dl>
			<% } else { %>

			<h1><span class="fa fa-sign-in"></span> Create a new challenge</h1>
			<!-- LOGIN FORM -->
			<form action="/newChallenge" method="post">
				<div class="form-group  col-sm-12">
					<label>Title</label>
					<input type="text" class="form-control" name="title">
				</div>
				<div class="form-group  col-sm-12">
					<label>Description</label>
					<input type="text" class="form-control" name="description">
				</div>

				<div class="form-group col-sm-12">
					<div class="col-sm-12">
						<label>Define a time limit</label>
					</div>
					<div class="col-sm-5">
						<input id="durationH" type="text" value="0" name="durationH" class="form-control">
					</div>
					<div class="col-sm-5">
						<input id="durationD" type="text" value="0" name="durationD" class="form-control">
					</div>
				</div>

				<hr>

				<button type="submit" class="btn btn-punch btn-warning btn-lg">Submit this new challenge</button>
			</form>
			<% } %>
		</div>

	</div>
	
	<% include statics/footers %>

	<script type="text/javascript">

		$(function(){

			$("#durationH").TouchSpin({
				min: 0,
				max: 24,
				stepinterval: 1,
				postfix: 'hours'
			});
			$("#durationD").TouchSpin({
				min: 0,
				max: 24,
				stepinterval: 1,
				postfix: 'days'
			});
		});
	</script>
</body>
</html>