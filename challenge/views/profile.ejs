<!doctype html>
<html>
<head>
	<% include statics/headers %>
	<title></title>
</head>
<body>

	<% include statics/navTop %>
	<% xpPer = Math.round((currentUser.xp/currentUser.xpNext )*100); %>
	<div class="canvas">
		<div class="container">

			<div class="page-header text-center">
				<h1><span class="fa fa-anchor"></span> Profile Page</h1>
				<a href="/logout" class="btn btn-punch btn-default btn-sm">Logout</a>
			</div>

			<div class="row">
				<div id="user_header" class="col-lg-12 media">
					<a class="pull-left" href="#">
						<span class="navbar-text identicon animated rotateIn" data-size="110" data-hashMe="<%= currentUser.idCool %>"></span>
					</a>
					<div id="scorebox" class="pull-right animated bounceInRight">
						<div class="xp"><span class="odometer" data-number="<%= currentUser.level %>">0</span>
						</div>
						<div class="score">
							<%= currentUser.xp %>/<%= currentUser.xpNext %>
						</div>
					</div>
					<div class="media-body">

						<h2 class="media-heading animated bounceInUp">
							<%= currentUser.local.pseudo %> <small><i class="glyphicon glyphicon-ok-sign"></i></small>
						</h2>
						<div class="loaderProgress animated flipInY">
							<div class="tinyProgress tinyBlue" style="width: <%= xpPer %>%"></div>
						</div>
						<hr>
						<ul class="list-inline animated bounceInDown">

							<% if (currentUser.local.email) { %>
							<li>
								<h4>
									<span class="label label-success">
										<i class="fa fa-check-square"></i>
										<%= currentUser.idCool %>
									</span>
								</h4>
							</li>
							<% } %>

							<% if (currentUser.facebook.token) { %>
							<li>
								<h4>
									<span class="label label-primary">
										<i class="fa fa-facebook"></i>
										<i class="fa fa-check-square"></i>
										<%= currentUser.facebook.name %>
									</span>
								</h4>
							</li>
							<% } %>

							<% if (currentUser.google.token) { %>
							<li>
								<h4>
									<span class="label label-danger">
										<i class="fa fa-google-plus"></i>
										<i class="fa fa-check-square"></i>
										<%= currentUser.google.name %>
									</span>
								</h4>
							</li>
							<% } %>

							<li>
								<% if (currentUser.twitter.token) { %>
								<h4>
									<span class="label label-info">
										<i class="fa fa-twitter"></i>
										<i class="fa fa-check-square"></i>
										<%= currentUser.twitter.username %>
									</span>
								</h4>
								<% } else { %>
								<h5>
									<a href="" class="btn btn-info">
										<i class="fa fa-twitter"></i>
										Add Twitter

									</a>
								</h5>


								<% } %>

							</li>

							
						</ul>

					</div>
				</div>


				<!-- LOCAL INFORMATION -->
				<div class="col-sm-6">
					<div class="well">
						<h3><span class="fa fa-user"></span> Local</h3>

						<% if (currentUser.local.email) { %>
						<p>
							<strong>id</strong>: <%= currentUser._id %><br>
							<strong>pseudo</strong>: <%= currentUser.local.pseudo %><br>
							<strong>email</strong>: <%= currentUser.local.email %><br>
							<strong>password</strong>: <%= currentUser.local.password %>
						</p>

						<a href="/unlink/local" class="btn btn-punch btn-default">Unlink</a>
						<% } else { %>
						<a href="/connect/local" class="btn btn-punch btn-default">Connect Local</a>
						<% } %>

					</div>
				</div>

				<!-- FACEBOOK INFORMATION -->
				<div class="col-sm-6">
					<div class="well">
						<h3 class="text-primary"> Facebook</h3>

						<!-- check if the user has this token (is the user authenticated with this social account) -->
						<% if (currentUser.facebook.token) { %>
						<p>
							<strong>id</strong>: <%= currentUser.facebook.id %><br>
							<strong>email</strong>: <%= currentUser.facebook.email %><br>
							<strong>name</strong>: <%= currentUser.facebook.name %><br>
						</p>

						<a href="/unlink/facebook" class="btn btn-punch btn-info">Unlink</a>
						<% } else { %>
						<a href="/connect/facebook" class="btn btn-punch btn-info">Connect Facebook</a>
						<% } %>

					</div>
				</div>
			</div>
			<div class="row">

				<!-- TWITTER INFORMATION -->
				<div class="col-sm-6">
					<div class="well">
						<h3 class="text-info"><span class="fa fa-twitter"></span> Twitter</h3>

						<% if (currentUser.twitter.token) { %>
						<p>
							<strong>id</strong>: <%= currentUser.twitter.id %><br>
							<strong>display name</strong>: <%= currentUser.twitter.displayName %><br>
							<strong>username</strong>: <%= currentUser.twitter.username %>
						</p>

						<a href="/unlink/twitter" class="btn btn-punch btn-info">Unlink</a>
						<% } else { %>
						<a href="/connect/twitter" class="btn btn-punch btn-info">Connect Twitter</a>
						<% } %>

					</div>
				</div>

				<!-- GOOGLE INFORMATION -->
				<div class="col-sm-6">
					<div class="well">
						<h3 class="text-danger"><span class="fa fa-google-plus"></span> Google+</h3>

						<% if (currentUser.google.token) { %>
						<p>
							<strong>id</strong>: <%= currentUser.google.id %><br>
							<strong>email</strong>: <%= currentUser.google.email %><br>
							<strong>name</strong>: <%= currentUser.google.name %>
						</p>

						<a href="/unlink/google" class="btn btn-punch btn-danger">Unlink</a>
						<% } else { %>
						<a href="/connect/google" class="btn btn-punch btn-danger">Connect Google</a>
						<% } %>

					</div>
				</div>
			</div>
		</div>
		<% include statics/footers %>
	</body>
	</html>