<!doctype html>
<html>
<head>
	<meta property="og:title" content="<%= currentUser.local.pseudo %>, challenger level <%= currentUser.level %>" />
	<meta property="og:type" content="profile:<%= currentUser.local.idCool %>" />
	<meta property="og:url" content="http://www.imdb.com/title/tt0117500/" />
	<meta property="og:image" content="http://ia.media-imdb.com/images/rock.jpg" />
	<% include statics/headers %>
	<title></title>
	<link rel="stylesheet" href="./css/timeline.css">

</head>
<body>

	<% include statics/navTop %>
	<% xpPer = Math.round((currentUser.xp/currentUser.xpNext )*100); %>
	<div class="canvas">
		<div class="container">
			<div class="row">
				<div id="user_header" class="col-lg-12 well">
					<h4>My informations</h4>
					<a class="pull-left" href="#">
						<span class="navbar-text identicon animated rotateIn" data-size="110" data-hashMe="<%= currentUser.idCool %>"></span>
					</a>
					<div id="scorebox" class="pull-right animated bounceInRight">
						<div class="level text-center"><span class="odometer" data-number="<%= currentUser.level %>">0</span>
						</div>
						<div class="xp text-center">
							<%= currentUser.xp %>/<%= currentUser.xpNext %>
						</div>
					</div>
					<div class="media-body">
						<h2 class="animated bounceInUp">
							<%= currentUser.local.pseudo %> 
							<small> <a href="/u/<%= currentUser.idCool %>"> <i class="fa fa-chain"></i> <%= currentUser.idCool %> </a></small>
						</h2>
						<div class="loaderProgress animated flipInY">
							<div class="tinyProgress tinyBlue" style="width: 0%" data-percent="<%= xpPer %>"></div>
						</div>
						<ul class="list-inline animated bounceInDown">

							<% if (currentUser.local.email) { %>
							<li>
								<h4>
									<span class="label label-success">
										<i class="fa fa-check-square"></i>
										<%= currentUser.idCool %>
									</span>
								</h4>
							</li>
							<% } %>

							<li>
								<h4>
									<% if (currentUser.facebook.token) { %>
									<span class="linked active label label-primary">
										<i class="fa fa-facebook"></i>
										<a href="/unlink/facebook" class="hidden">
											<i class="fa fa-times"></i>
										</a>				
										<i class="fa fa-check-square meany"></i>
										<%= currentUser.facebook.name %>
									</span>
									<% } else { %>
									<a href="/connect/facebook" class="label label-primary">
										<i class="fa fa-facebook"></i>
										Connect facebook
									</a>
									<% } %>
								</h4>
							</li>

							<li>
								<h4>
									<% if (currentUser.google.token) { %>
									<span class="linked active label label-danger">
										<i class="fa fa-google-plus"></i>
										<a href="/unlink/google" class="hidden">
											<i class="fa fa-times"></i>
										</a>
										<i class="fa fa-check-square meany"></i>
										<%= currentUser.google.name %>
									</span>
									<% } else { %>
									<a href="/connect/google" class="label label-danger">
										<i class="fa fa-google-plus"></i>
										Connect google+
									</a>
									<% } %>
								</h4>
							</li>

							<li>
								<h4>
									<% if (currentUser.twitter.token) { %>
									<span class="linked active label label-info">
										<i class="fa fa-twitter"></i>
										<a href="/unlink/twitter" class="hidden">
											<i class="fa fa-times"></i>
										</a>
										<i class="fa fa-check-square meany"></i>
										<%= currentUser.twitter.username %>
									</span>
									<% } else { %>
									<a href="/connect/twitter" class="label label-info">
										<i class="fa fa-twitter"></i>
										Connect Twitter
									</a>
									<% } %>
								</h4>

							</li>


						</ul>

					</div>
				</div>
			</div>
			<ul class="timeline">

				<% var notif = currentUser.notifications;
				for (var i = notif.length - 1; i >= 0; i--) {
					if(notif[i].persist === true) { 
						var isOdd =  (i % 2) ? 'fadeInLeft' : 'fadeInRight timeline-inverted'
						, type = (notif[i].type == 'challengeSuccess') ? 'success' : ((notif[i].type == 'challengeReceive') ? 'danger' : 'info');
						%>
						<li class="animated <%= isOdd %> ">
							<div class="timeline-badge <%= type %>"><span class="<%= notif[i].icon %>"></span></div>
							<div class="timeline-panel glow-shad well">
								<div class="timeline-heading">
									<h4 class="timeline-title"><%= notif[i].title %></h4>
									<p>
										<small class="text-muted">
											<i class="glyphicon glyphicon-time"></i>
											<span class="timeAgo" data-date="<%= notif[i].date %>"></span>
										</small>
									</p>
								</div>
								<div class="timeline-body">
									<p> <a href="<%= notif[i].link2 %>" ><%= notif[i].to %></a> <%= notif[i].message %></p>
								</div>
							</div>
						</li>
						<% 
					} 
				} %>

			</ul>
		</div>
	</div>
	<% include statics/footers %>
	<script type="text/javascript">

		$(function() {
			var meNot = false;
			$('.linked').hover(function(){
				var _this = $(this);
				_this.children('.meany').addClass('hidden');
				_this.children('a').removeClass('hidden');

			}, function(){
				var _this = $(this);
				_this.children('a').addClass('hidden');
				_this.children('.meany').removeClass('hidden');
			});
		});

	</script>
</body>
</html>