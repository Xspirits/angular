<!doctype html>
<html>
<head>
	<% include statics/headers %>
	<title></title>
</head>
<body>

	<% include statics/navTopFix %>
	<div class="canvas">
		<div class="container">
			<div class="col-sm-6 col-sm-offset-3">

				<h1>Signup</h1>

				<% if (message.length > 0) { %>
				<div class="alert alert-danger"><%= message %></div>
				<% } %>

				<form action="/signup" id="rockstar" method="post">
					<div class="form-group">
						<label>Pseudo</label>
						<input type="text" class="form-control" name="pseudo">
					</div>
					<div class="form-group" id="emailVerify">
						<label>Email</label>
						<input type="text" class="form-control" id="txtEmail" name="email">
					</div>
					<div class="form-group">
						<label>Password</label>
						<input type="password" class="form-control" name="password">
					</div>

					<button type="submit" id="createAccount" class="btn btn-punch btn-warning btn-lg">Signup</button>
				</form>

				<hr>

				<p>Already have an account? <a href="/login">Login</a></p>
				<p>Or go <a href="/">home</a>.</p>

			</div>
		</div>
	</div>
	<% include statics/footersFix %>

	<script type="text/javascript">

		$(function() {
			$('#createAccount').click(function(e) {
				e.preventDefault();
				var re = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
				var sEmail = $('#txtEmail').val();
				if (sEmail == '' || !re.test(sEmail)){
					console.log(!re.test(sEmail));

					$('#emailVerify').addClass('has-error')
				} 
				else {
					$('#rockstar').submit();
				}
			});

		});

	</script>

</body>
</html>