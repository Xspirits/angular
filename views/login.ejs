<!doctype html>
<html>
<head>
	<% include statics/headers %>
	<title></title>
</head>
<body>

	<% include statics/navTopFix %>
	<div class="canvas">
		<div class="container">
			<div class="col-sm-6 col-sm-offset-3">

				<h1><span class="fa fa-sign-in"></span> Login</h1>

				<% if (message.length > 0) { %>
				<div class="alert alert-danger"><%= message %></div>
				<% } %>

				<!-- LOGIN FORM -->
				<form action="/login" method="post">
					<div class="form-group">
						<label>Email</label>
						<input type="text" class="form-control" name="email">
					</div>
					<div class="form-group">
						<label>Password</label>
						<input type="password" class="form-control" name="password">
					</div>

					<button type="submit" class="btn btn-block mint btn-lg">Enter the Arena</button>
				</form>

				<hr>
				<p><a href="/signup" class="btn bittersweet btn-md">Need an account? Become a challenger now!</a></p>

			</div>
		</div>
	</div>
	
	<% include statics/footersFix %>
</body>
</html>