<!doctype html>
<html>
<head>
	<% include statics/headers %>
	<!-- Start General metas -->
    <meta name="url" content="http://www.challenge-friends.com">
    <meta name="language" content="EN">
    <meta name="reply-to" content="cyf.app@gmail.com">
    <meta name="rating" content="General">
    <meta name="keywords" content="<%= challenge.title %>, challenge, challenge friends, cyf, gaming, competition, e-sport, league of legend, dota, dota 2, champion">
    <meta name="title" content="Challenge <%= challenge.title %> details on Challenge your Friends">
    <meta name="description" content="<%= challenge.description %>">
    <!-- End General metas -->
    <!-- Start Open Graph metas -->
    <meta property="og:type" content="profile"> <!-- website/article/profile -->
    <meta property="og:url" content="http://www.challenge-friends.com">
    <meta property="og:site_name" content="Challenge your Friends"/>
    <meta property="og:image" content="http://www.challenge-friends.com/img/twitt_card.png">
    <meta property="og:image:type" content="image/png">
    <meta property="og:image:width" content="750">
    <meta property="og:image:height" content="315">
    <meta property="og:title" content="Challenge <%= challenge.title %> details on Challenge your Friends">
    <meta property="og:description" content="<%= challenge.description %>">
    <!-- End Open Graph -->
    <!-- Start Twitter Card Meta -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:site" content="@cyf_app">
    <meta name="twitter:image" content="http://www.challenge-friends.com/img/twitt_card.png">
    <meta name="twitter:image:width" content="750">
    <meta name="twitter:title" content="Challenge <%= challenge.title %> details on Challenge your Friends">
    <meta name="twitter:description" content="<%= challenge.description %>">
    <!-- Twitter card end -->

	<title>Challenge <%= challenge.title %> details - Challenge your friends</title>
</head>
<body>

	<% include statics/navTop %>

	<div class="canvas">
		<div class="container">
			<div class="row">
				<h1><span class="<%= challenge.icon %>"></span> <%= challenge.title %> <small> <%= challenge.game %></small></h1>
				<hr>
				<p>
					<strong>Description :</strong> <%= challenge.description %>
				</p>
				<p>
					<strong>value :</strong> <%= challenge.value %>
				</p>
				<p> 
					<strong>Rated :</strong> <span class="odometer" data-number="<%= challenge.rating.difficulty.count %>">0</span> times
				</p>
				<ul>
					<li>Difficulty : 
						<span class="label label-danger odometer" data-number="<%= challenge.rating.difficulty.avg %>">0</span>
					</li>
					<li>Quickness : 
						<span class="label label-info odometer" data-number="<%= challenge.rating.quickness.avg %>">0</span>
					</li>
					<li>fun : 
						<span class="label label-success odometer" data-number="<%= challenge.rating.quickness.avg %>">0</span>
					</li>
				</ul>
				<p>
					<strong>Currently rated :</strong> <%= challenge.rateValue %>
				</p>
				<p>
					<strong>Created :</strong> <span class="dateReadability" data-date="<%= challenge.creation %>"></span>
				</p>
			</div>
			<div class="row">
				<div class="col-xs-12 col-md-6">
					<h1 class="rating-num">4.0</h1>
					<h2 class="fa fa-fire pull-left"><%= challenge.value %></h2>
					<div class="rating">
						<span class="glyphicon glyphicon-star"></span>
						<span class="glyphicon glyphicon-star"></span>
						<span class="glyphicon glyphicon-star"></span>
						<span class="glyphicon glyphicon-star"></span>
						<span class="glyphicon glyphicon-star-empty"></span>
					</div>
					<div>
						<span class="fa fa-pencil"></span> <%= challenge.rating.difficulty.count %> evaluations
					</div>
				</div>
			</div>
		</div>
		<% include statics/footers %>

	</body>
	</html>